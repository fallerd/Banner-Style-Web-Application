<p id="notice"><%= notice %></p>

<h1>Manage Sections</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Course</th>
      <th>Professor</th>
      <th>Time</th>
      <th>Location</th>
      <th>Days</th>
      <th>Semester</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.number.to_s.rjust(3, '0') %></td>
        <td><%= section.course.course_name %> - <%= section.course.code %></td>
        <td><%= section.professor.professor_name %></td>
        <td><%= section.time %></td>
        <td><%= section.room_number %></td>
        <td><%= section.days %></td>
        <td><%= section.semester %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
      <tr>
        <td colspan=10 ><%= link_to 'New Section', new_section_path %></td>
      </tr>
  </tbody>
</table>
