<%= form_for(section) do |f| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number %>
    <%= f.number_field :number %>
  </div>

  <div class="field">
    <%= f.label :course_id %>
    <%= f.collection_select :course_id, Course.order(:course_name), :id, :course_name, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :professor_id %>
    <%= f.collection_select :professor_id, Professor.order(:professor_name), :id, :professor_name, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :time %>
    <%= f.text_field :time %>
  </div>

  <div class="field">
    <%= f.label :room_number %>
    <%= f.text_field :room_number %>
  </div>

  <div class="field">
    <%= f.label :days %>
    <%= f.text_field :days %>
  </div>

  <div class="field">
    <%= f.label :semester %>
    <%= f.select :semester, ['Fall', 'Summer', 'Spring']%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
